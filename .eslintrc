{
  "extends": "airbnb",
  "plugins": [
      "jsx-a11y",
      "import"
  ],
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "App": true,
    "window": true,
    "moment": true,
    "analytics": true,
    "ga": true,
    "Chartist": true,
    "Stripe": true,
    "tinymce": true,
    "_": true,
    "Bloodhound": true
  },
  "rules": {
    "no-lonely-if": 0,
    "object-property-newline": 0,
    "no-mixed-operators": 0,
    "radix": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "consistent-return": 0,
    "no-restricted-syntax": 0,
    "no-useless-escape": 0,
    "no-underscore-dangle": 0,
    "prefer-spread" : 0,
    "no-unneeded-ternary": 0,
    "no-else-return": 0,
    "vars-on-top": 0,
    
    "prefer-arrow-callback": 0,
    "no-var": 0,
    "prefer-template": 0,
    "space-before-function-paren": "off",
    "object-shorthand": "off",
    "consistent-this": [
      2,
      "self"
    ],
    "camelcase": [
      0, // 2
      {
        "properties": "always"
      }
    ],
    "max-len": 0,
    "no-debugger": 0,
    "strict": 0,
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
      2,
      "never"
    ],
    "linebreak-style": 2,
    "no-bitwise": 2,
    "no-cond-assign": 0,
    "curly": 2,
    "eqeqeq": 2,
    "no-eq-null": 0,
    "no-eval": 0,
    "no-unused-expressions": 0,
    "guard-for-in": 0,
    "wrap-iife": [
      2,
      "any"
    ],
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    "no-loop-func": 0,
    "no-caller": 2,
    "no-script-url": 2,
    "no-new-func": 0,
    "no-new-wrappers": 0,
    "no-undef": 2,
    "new-cap": 2,
    "no-empty": 2,
    "no-new": 2,
    "no-plusplus": 0,
    "dot-notation": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
